<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="lte2_fixed" inherit_id="web.webclient_bootstrap" name="AdminLTE2 Fixed" active="True" priority="101">
        <xpath expr="//t[@t-call='web.layout']" position="inside">
          <t t-set="body_classname" t-ignore="true" t-value="body_classname + ' fixed'" />
        </xpath>
    </template> 
    
    <template id="lte2_collapse" inherit_id="web.webclient_bootstrap" name="AdminLTE2 Collapse" active="False" priority="102">
        <xpath expr="//t[@t-call='web.layout']" position="inside">
          <t t-set="body_classname" t-ignore="true" t-value="body_classname + ' sidebar-collapse'" />
        </xpath>
    </template> 
    

